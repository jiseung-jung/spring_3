<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.jiseung.s3.qna.QnADAO">
    	<select id="qnaList" resultType="com.jiseung.s3.qna.QnADTO">
    		select * from qna order by num desc
    	</select>
    	
    	<select id="qnaSelect" parameterType="java.lang.Long" resultType="com.jiseung.s3.qna.QnADTO">
    		select * from qna where num = #{num}
    	</select>
    	
    	<insert id="qnaWrite" parameterType="com.jiseung.s3.qna.QnADTO">
    		insert into qna values(qna_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0,0,0,0)
    	</insert>
    	
    	<delete id="qnaDelete" parameterType="java.lang.Long">
    		delete qna where num = #{num}
    	</delete>
    	
    	<update id="qnaUpdate" parameterType="com.jiseung.s3.qna.QnADTO">
    		update qna set title=#{title}, contents=#{contents} where num=#{num}
    	</update>
    </mapper>